<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    
    <ImageView 
        android:id="@+id/imageView1ID"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:src="@drawable/home" />
    
    

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1ID"
        android:layout_toRightOf="@+id/imageView1ID"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/nameTextViewID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ten Benh Vien"
            android:textSize="22dp"
            android:textStyle="bold" />
        
        <TextView 
            android:id="@+id/infoTextViewID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dia Chi Benh Vien"
            android:textSize="16dp"
            android:textStyle="italic" />
        
    </LinearLayout>

</RelativeLayout>
